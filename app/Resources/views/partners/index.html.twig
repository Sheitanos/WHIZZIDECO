{% extends 'base.html.twig' %}
{% block body %}
    <div id="haut" class="container-fluid">
        <div class="row blockBoutique">
            <div class="col-md-12">
                {% for partner in partners %}
                    <div class="colorBox col-md-4">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-4 text-center">
                                <img class="img-responsive logoPartenaire1"
                                     src="{{ asset( 'uploads/partner/' ~ partner.imageName) }}"
                                />
                            </div>
                        </div>
                        <div class="row partners-articles">
                            {% for article in articles %}
                                {% if article.partner.id == partner.id %}
                                    <div class="col-md-4 ">
                                        <img class="logoPartenaire2 img-responsive"
                                             src="{{ asset( 'uploads/article/' ~ article.imageName) }}"
                                        />
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
