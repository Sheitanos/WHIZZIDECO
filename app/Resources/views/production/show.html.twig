{% extends 'base.html.twig' %}

{% block body %}
    <h1>Production</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ production.id }}</td>
            </tr>
            <tr>
                <th>Productiontext</th>
                <td>{{ production.productionText }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ production.title }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ production.imageName }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if production.updatedAt %}{{ production.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('production_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('production_edit', { 'id': production.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
